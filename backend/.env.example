# Backend Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# Backend Server Port
BACKEND_PORT=5050

# MongoDB Connection String
# Replace the placeholders with your actual MongoDB credentials:
# - <MONGODB_USERNAME>: Your MongoDB database username
# - <MONGODB_PASSWORD>: Your MongoDB database password
# - <MONGODB_CLUSTER>: Your MongoDB cluster hostname
# - <DATABASE_NAME>: Your database name
MONGO_URL=mongodb+srv://<MONGODB_USERNAME>:<MONGODB_PASSWORD>@<MONGODB_CLUSTER>.mongodb.net/<DATABASE_NAME>?appName=CampusConnect

# Frontend Configuration
FRONTEND_PORT=4200
FRONTEND_ORIGIN=http://localhost:4200

# API Base URL (used by Vite for frontend builds)
# This is referenced here for convenience, but is primarily used in frontend configuration
VITE_API_URL=http://localhost:5050/api
