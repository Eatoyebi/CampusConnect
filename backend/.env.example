# Backend Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# Backend Server Port
BACKEND_PORT=5050

# MongoDB Connection String
# Replace <MONGODB_PASSWORD> with your actual MongoDB password
# Replace the cluster URL if using a different MongoDB instance
MONGO_URL=mongodb+srv://campusconnect-app:<MONGODB_PASSWORD>@campusconnect.pyhavmz.mongodb.net/CampusConnectDB?appName=CampusConnect

# Frontend Configuration
FRONTEND_PORT=4200
FRONTEND_ORIGIN=http://localhost:4200

# API Base URL (for frontend to connect to backend)
VITE_API_URL=http://localhost:5050/api
