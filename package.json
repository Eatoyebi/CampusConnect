{
  "name": "campus-connect",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "backend",
    "frontend/campus-connect"
  ],
  "scripts": {
    "build": "lerna run build --stream",
    "dev": "lerna run dev --parallel --stream",
    "lint": "lerna run lint --stream",
    "test": "lerna run test --stream",
    "start": "concurrently \"npm run dev -w @campus/backend\" \"npm run start -w @campus/frontend\""
  },
  "devDependencies": {
    "@types/socket.io-client": "^1.4.36",
    "concurrently": "^9.2.1",
    "lerna": "^9.0.0",
    "nodemon": "^3.0.1"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "cookie-parser": "^1.4.7",
    "multer": "^2.0.2"
  }
}
